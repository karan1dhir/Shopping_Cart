@model GlobalMarket.ViewModels.CategoryProductViewModel
@{
    ViewBag.Title = "CategoryProducts";
}

<h2>CategoryProducts</h2>

<div style="margin-top:10rem">
    <div class="row row-pb-md">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-3 col-lg-3 mb-4 text-center">
                <div class="product-entry border">
                    <a href="@Url.Action("ProductDetail", "Product", new { ProductID = product.ID})">
                        <img src="@product.Variants.FirstOrDefault().VariantImages.FirstOrDefault().ImageURL" class="img-fluid" alt="Free html5 bootstrap 4 template" style=" height:160px;width:140px;">
                    </a>
                    <div class="desc">

                        <h2><a href="@Url.Action("ProductDetail", "Product", new { ProductID = product.ID})" style="color:black;text-decoration:none">@product.Name</a></h2>
                        <span class="price">$@product.Variants.FirstOrDefault().ListingPrice</span>
                    </div>
                    @if (product.Variants.FirstOrDefault().Discount != 0)
                    {
                        <p>Discount Available</p>
                    }
                </div>
            </div>
        }
    </div>
</div>

