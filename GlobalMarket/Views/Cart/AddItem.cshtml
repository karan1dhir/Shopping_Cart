@model GlobalMarket.ViewModels.CartMessageViewModel
@{
    ViewBag.Title = "AddItem";
}


<div style="margin-top:10rem">
    <div class="row">
        @if (Model.SuccessMessage != null)
        {
            <div class="col-md-8 offset-2">
                <div class="alert alert-success" role="alert">
                    Item Successfully Added to Cart
                </div>
            </div>
        }
        else
        {
            <div class="col-md-8 offset-2">
                <ul>
                    @foreach (var msg in Model.ErrorMessages)
                    {
                    <li style="list-style:none">
                        <p class="alert alert-danger" role="alert">@msg</p>
                    </li>
                    }
                </ul>
            </div>
        }
    </div>
    <p>
        @Html.ActionLink("Back to previous page", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-dark" })
    </p>
</div>